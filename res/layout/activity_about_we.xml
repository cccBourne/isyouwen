<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_white"
    >
    
     <RelativeLayout
        android:id="@+id/about_we_title"
        android:background="@color/common_orange"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        >
          <ImageButton
            android:id="@+id/about_we_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/nav_btn_back"
            android:background="@android:color/transparent"/>
        <TextView 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="关于我们"
             android:textColor="@color/common_white"
             android:textSize="18sp"
             android:padding="5dp"
             android:layout_centerVertical="true"
             android:layout_centerInParent="true"
            />
        </RelativeLayout>
          <ImageView 
           android:id="@+id/about_we_icon"
           android:layout_below="@id/about_we_title"
            android:layout_marginTop="60dp"
           android:layout_marginBottom="60dp"
           android:layout_centerHorizontal="true"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:src="@drawable/img_set_write_logo"
           />
         
       <TextView 
             android:id="@+id/about_we_company"
             android:layout_below="@id/about_we_icon"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="浙江爱充网络科技有限公司"
             android:textColor="@color/common_black"
             android:textSize="18sp"
             android:layout_marginBottom="20dp"
             android:layout_marginLeft="20dp"
            />
       <TextView 
             android:id="@+id/about_we_addr_tag"
             android:layout_below="@id/about_we_company"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="地址:"
             android:textColor="@color/common_gray"
             android:textSize="18sp"
             android:layout_marginLeft="20dp"
             android:layout_marginTop="20dp"
             android:layout_marginRight="5dp"
            />
      <TextView 
             android:layout_below="@id/about_we_company"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="杭州市西湖区天际大厦11层（天目山路181号）"
             android:textColor="@color/common_gray"
             android:textSize="18sp"
             android:layout_marginTop="20dp"
             android:layout_marginRight="20dp"
             android:layout_toRightOf="@id/about_we_addr_tag"
            />
      <TextView 
             android:id="@+id/about_we_www_tag"
             android:layout_below="@id/about_we_addr_tag"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="网址:"
             android:textColor="@color/common_gray"
             android:textSize="18sp"
             android:layout_marginLeft="20dp"
             android:layout_marginTop="20dp"
             android:layout_marginRight="5dp"
            />
      <TextView 
             android:layout_below="@id/about_we_addr_tag"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="www.eichong.com"
             android:textColor="@color/common_gray"
             android:textSize="18sp"
             android:layout_marginTop="20dp"
             android:layout_toRightOf="@id/about_we_www_tag"
            />
       <TextView 
             android:id="@+id/about_we_protocol_tag"
             android:layout_below="@id/about_we_www_tag"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="用户协议:"
             android:textColor="@color/common_gray"
             android:textSize="18sp"
             android:layout_marginLeft="20dp"
             android:layout_marginTop="20dp"
             android:layout_marginRight="5dp"
            />
      <TextView 
          android:id="@+id/about_we_protocol"
             android:layout_below="@id/about_we_www_tag"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="《爱充网用户协议》"
             android:textColor="@color/common_black"
             android:textStyle="bold"
             android:textSize="18sp"
             android:layout_marginTop="20dp"
             android:layout_toRightOf="@id/about_we_protocol_tag"
            />
       <TextView 
             android:id="@+id/about_we_ttt_tag"
             android:layout_below="@id/about_we_protocol_tag"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="声明:"
             android:textColor="@color/common_gray"
             android:textSize="18sp"
             android:layout_marginLeft="20dp"
             android:layout_marginTop="20dp"
             android:layout_marginRight="5dp"
            />
      <TextView 
             android:layout_below="@id/about_we_protocol_tag"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="版权归浙江爱充网络科技有限公司所有"
             android:textColor="@color/common_gray"
             android:textSize="18sp"
             android:layout_marginTop="20dp"
             android:layout_marginRight="20dp"
             android:layout_toRightOf="@id/about_we_ttt_tag"
            />
     
     
     
     
     

</RelativeLayout>
