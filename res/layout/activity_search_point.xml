<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_light_white"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >
    
    <LinearLayout 
         android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/common_orange"
         android:orientation="horizontal"
        >
        <ImageButton
            android:id="@+id/activity_search_point_back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/nav_btn_back"
            android:layout_gravity="center_vertical"
            android:background="@android:color/transparent"/>
        <EditText 
            android:id="@+id/activity_search_point_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:hint="输入充电点"
            android:singleLine="true"
            android:imeOptions="actionSearch"
            android:textColorHint="@color/common_light_white"
            android:layout_gravity="center"
            android:paddingLeft="10dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:textColor="@color/common_white"
            android:textSize="15sp"       
            android:background="@drawable/home_search_bg"   
            />
        <TextView 
             android:id="@+id/activity_search_point_search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
             android:textColor="@color/common_white"
            android:textSize="17sp" 
            android:text="搜索"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            />
    </LinearLayout>
    
 <ScrollView 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:orientation="vertical" >
     <FrameLayout 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         >
         <!-- 搜索历史，收藏布局 -->
          <LinearLayout 
            android:id="@+id/search_point_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView 
         android:id="@+id/search_point_tv_history_no"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="暂无历史搜索"
         android:visibility="gone"
         android:textColor="@color/common_light_black"
         android:textSize="17sp"
         android:layout_margin="20dp"
         android:paddingTop="5dp"
         android:paddingBottom="5dp"
         android:gravity="center"
         android:background="@color/common_white"
         />
     <TextView 
         android:id="@+id/search_point_tv_history"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="历史搜索"
          android:visibility="gone"
         android:textColor="@color/common_light_black"
         android:textSize="15sp"
         android:layout_marginLeft="20dp"
         android:layout_marginRight="20dp"
         android:paddingTop="5dp"
         android:paddingBottom="5dp"
         />
     <LinearLayout 
         android:layout_width="match_parent"
         android:layout_height="wrap_content" 
         android:background="@color/common_white"
         android:orientation="vertical"
         >
     <com.bm.wanma.view.MyDetailListView
        android:id="@+id/search_point_history_listview"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	     android:divider="@color/common_light_gray"
	    android:dividerHeight="1dp"
	    android:listSelector="@color/common_white"
	    ></com.bm.wanma.view.MyDetailListView>  
	     <View 
	        android:layout_width="match_parent"
	        android:layout_height="1dp"
	        android:background="@color/common_light_gray"
	        />
	    <TextView 
	     android:id="@+id/search_point_tv_history_clear"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="清除历史搜索"
          android:visibility="gone"
         android:layout_gravity="center"
         android:textColor="@color/common_light_black"
         android:textSize="17sp"
         android:padding="5dp"
         android:layout_margin="10dp"
         android:background="@drawable/search_point_shape_clear"
	        />
	     </LinearLayout>
	    <!-- 我的收藏 -->
	    
	        <TextView 
         android:id="@+id/search_point_tv_collect_no"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="暂无我的收藏"
          android:visibility="gone"
         android:textColor="@color/common_light_black"
         android:textSize="17sp"
         android:layout_margin="20dp"
         android:paddingTop="5dp"
         android:paddingBottom="5dp"
          android:gravity="center"
         android:background="@color/common_white"
         />
     <TextView 
         android:id="@+id/search_point_tv_collect"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="我的收藏"
          android:visibility="gone"
         android:textColor="@color/common_light_black"
         android:textSize="15sp"
         android:layout_marginLeft="20dp"
         android:layout_marginRight="20dp"
         android:paddingTop="5dp"
         android:paddingBottom="5dp"
         />
     <LinearLayout 
         android:layout_width="match_parent"
         android:layout_height="wrap_content" 
         android:background="@color/common_white"
         android:orientation="vertical"
         >
     <com.bm.wanma.view.MyDetailListView
        android:id="@+id/search_point_collect_listview"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:divider="@color/common_light_gray"
	    android:dividerHeight="1dp"
	    android:listSelector="@color/common_white"
	    ></com.bm.wanma.view.MyDetailListView>  
	    <View 
	        android:layout_width="match_parent"
	        android:layout_height="1dp"
	        android:background="@color/common_light_gray"
	        />
	    <TextView 
	     android:id="@+id/search_point_tv_collect_more"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="       更多        "
          android:visibility="gone"
         android:layout_gravity="center"
         android:layout_marginTop="10dp"
         android:layout_marginBottom="10dp"
         android:textColor="@color/common_light_black"
         android:textSize="17sp"
         android:padding="5dp"
         android:background="@drawable/search_point_shape_clear"
	        />
 </LinearLayout>
</LinearLayout>

         <com.bm.wanma.view.MyDetailListView
        android:id="@+id/search_point_search_listview"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:divider="@color/common_light_gray"
	    android:dividerHeight="1dp"
	    ></com.bm.wanma.view.MyDetailListView>  
	     <TextView 
         android:id="@+id/search_point_search_listview_no_result"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="暂无搜索结果"
          android:visibility="gone"
         android:textColor="@color/common_light_black"
         android:textSize="17sp"
         android:layout_margin="20dp"
         android:paddingTop="5dp"
         android:paddingBottom="5dp"
          android:gravity="center"
         android:background="@color/common_white"
         />
     </FrameLayout>   
     
     
     
       
</ScrollView>
    
    
    
    

</LinearLayout>
