<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pop_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/common_white"
    android:padding="14dp"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="10dp" >

        <ImageView
            android:contentDescription="@string/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bg_charging" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:text="普通充电点"
            android:textColor="@color/common_gray"
            android:textSize="14sp" />

        <ImageView
            android:contentDescription="@string/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:src="@drawable/bg_charging_appointment" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:text="可预约充电点"
            android:textColor="@color/common_gray"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/common_light_gray" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
         >

        <RelativeLayout
            android:id="@+id/select_fast_ll"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:background="@drawable/popup_select_shape_uncheck"
             >
            <TextView
                android:id="@+id/select_fast_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="快充点"
                android:textColor="@color/common_gray"
                android:textSize="14sp" />
            
            <ImageView
                android:contentDescription="@string/app_name"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="3dp"
                android:id="@+id/select_fast_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:background="@drawable/btn_selected" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/select_slow_ll"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:background="@drawable/popup_select_shape_uncheck"
            >
            <TextView
                android:id="@+id/select_slow_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="慢充点"
                 android:layout_centerInParent="true"
                android:textColor="@color/common_gray"
                android:textSize="14sp" />
            
            <ImageView
                android:contentDescription="@string/app_name"
                android:id="@+id/select_slow_iv"
                 android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:background="@drawable/btn_selected" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:orientation="horizontal"
         >
        <RelativeLayout
            android:id="@+id/select_guo_ll"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:background="@drawable/popup_select_shape_uncheck"
            >
            <TextView
                android:id="@+id/select_guo_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="国标"
                android:layout_centerInParent="true"
                android:textColor="@color/common_gray"
                android:textSize="14sp" />
            
            <ImageView
                android:contentDescription="@string/app_name"
                android:id="@+id/select_guo_iv"
                 android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:background="@drawable/btn_selected" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/select_ou_ll"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:background="@drawable/popup_select_shape_uncheck"
             >

            <TextView
                android:id="@+id/select_ou_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="欧标"
                android:layout_centerInParent="true"
                android:textColor="@color/common_gray"
                android:textSize="14sp" />
            
            <ImageView
                android:contentDescription="@string/app_name"
                android:id="@+id/select_ou_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="3dp"
                android:visibility="gone"
                android:background="@drawable/btn_selected" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/select_idle_ll"
        android:layout_width="194dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:background="@drawable/popup_select_shape_uncheck"
         >
        <TextView
            android:id="@+id/select_idle_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="空闲充电点"
            android:layout_centerInParent="true"
            android:textColor="@color/common_gray"
            android:textSize="14sp" />
        
        <ImageView
            android:contentDescription="@string/app_name"
            android:id="@+id/select_idle_iv"
             android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="3dp"
                android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_selected" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="18dp" >

        <RelativeLayout
            android:id="@+id/select_fit_ll"
            android:layout_width="194dp"
            android:layout_height="wrap_content"
            android:background="@drawable/popup_select_shape_uncheck"
            >

            <TextView
                android:id="@+id/select_fit_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="适合爱车充电点"
                android:layout_centerInParent="true"
                android:textColor="@color/common_gray"
                android:textSize="14sp" />
            <ImageView
                android:contentDescription="@string/app_name"
                android:id="@+id/select_fit_iv"
                 android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:background="@drawable/btn_selected" />

        </RelativeLayout>

        <TextView
            android:id="@+id/popup_select_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/popup_select_shape_confirm"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="确定"
            android:textColor="@color/common_white"
            android:textSize="19sp" />
    </RelativeLayout>

</LinearLayout>