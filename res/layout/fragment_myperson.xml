<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:imagecontrol="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_white"
    android:orientation="vertical" >
    <!-- 头像 用户名 余额 -->
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="121dp"
	    android:background="@color/common_orange"
	    >
	     <!-- border_outside_color 外部圆圈的颜色 --> 
    	<!-- border_inside_color 内部部圆圈的颜色 --> 
    	<!-- border_thickness 外圆和内圆的宽度 --> 
		 <com.bm.wanma.view.RoundImageView  
         	 android:id="@+id/fragment_myperson_photo"
         	 android:layout_width="80dp"
          	 android:layout_height="80dp"
          	 android:layout_marginLeft="32dp"
          	 android:layout_centerVertical="true"
       		 android:src="@drawable/img_my_user" 
       		 imagecontrol:border_inside_color="@color/common_white"  
       		 imagecontrol:border_outside_color="@color/common_white"  
        	 imagecontrol:border_thickness="1dp"/> 
        	<!-- 已登录布局 --> 
		 <RelativeLayout 
		     android:visibility="gone"
		     android:id="@+id/fragment_myperson_rl_login"
		     android:layout_width="wrap_content"
          	 android:layout_height="wrap_content"
          	 android:layout_marginLeft="14dp"
          	 android:layout_centerVertical="true"
          	 android:layout_toRightOf="@id/fragment_myperson_photo"
		     >
		 <TextView 
	         android:id="@+id/fragment_myperson_phone"
	         android:layout_width="wrap_content"
          	 android:layout_height="wrap_content"
	         android:textColor="@color/common_white"
	         android:textSize="18sp"
	         android:textStyle="bold"
	        />
		  <TextView 
	        android:id="@+id/fragment_myperson_msg"
         	 android:layout_width="wrap_content"
          	 android:layout_height="wrap_content"
          	 android:layout_toRightOf="@id/fragment_myperson_phone"
          	 android:layout_marginLeft="10dp"
	         android:textColor="@color/common_orange"
	         android:textSize="12sp"
	         android:paddingLeft="10dp"
	         android:paddingRight="10dp"
	         android:text="消息"
	         android:background="@drawable/bespoke_detail_led_white"
	         
	        />
	    <TextView 
	        android:id="@+id/fragment_myperson_balance_tag"
         	 android:layout_width="wrap_content"
          	 android:layout_height="wrap_content"
          	 android:layout_marginTop="5dp"
          	 android:layout_below="@id/fragment_myperson_phone"
	         android:textColor="@color/common_white"
	         android:textSize="18sp"
	         android:text="余额:  "
	        />
	     <TextView 
	        android:id="@+id/fragment_myperson_balance"
         	 android:layout_width="wrap_content"
          	 android:layout_height="wrap_content"
          	 android:layout_toRightOf="@id/fragment_myperson_balance_tag"
          	 android:layout_below="@id/fragment_myperson_phone"
	         android:textColor="@color/common_white"
	         android:textSize="18sp"
	         android:layout_marginTop="5dp"
	         android:text="200元"
	         
	        />
		 </RelativeLayout>
		 <!-- 未登录布局 -->
	    <RelativeLayout 
		     android:id="@+id/fragment_myperson_rl_unlogin"
		     android:layout_width="wrap_content"
          	 android:layout_height="wrap_content"
          	 android:layout_marginLeft="14dp"
          	 android:layout_centerVertical="true"
          	 android:layout_toRightOf="@id/fragment_myperson_photo"
		     >
		 <TextView 
	         android:id="@+id/fragment_myperson_un_login_phone"
	         android:layout_width="wrap_content"
          	 android:layout_height="wrap_content"
	         android:textColor="@color/common_white"
	         android:textSize="18sp"
	         android:textStyle="bold"
	         android:text="爱充用户"
	        />
		  
	    <TextView 
	        android:id="@+id/fragment_myperson_login"
         	 android:layout_width="wrap_content"
          	 android:layout_height="wrap_content"
          	 android:layout_marginTop="5dp"
          	 android:layout_below="@id/fragment_myperson_un_login_phone"
	         android:textColor="@color/common_orange"
	         android:textSize="15sp"
	         android:paddingLeft="10dp"
	         android:paddingRight="10dp"
	         android:text="登录"
	         android:background="@drawable/bespoke_detail_led_white"
	        />
	     <TextView 
	        android:id="@+id/fragment_myperson_register"
         	 android:layout_width="wrap_content"
          	 android:layout_height="wrap_content"
          	 android:layout_toRightOf="@id/fragment_myperson_login"
          	 android:layout_below="@id/fragment_myperson_un_login_phone"
	         android:textColor="@color/common_orange"
	         android:textSize="15sp"
	         android:layout_marginTop="5dp"
	         android:layout_marginLeft="8dp"
	         android:paddingLeft="10dp"
	         android:paddingRight="10dp"
	         android:text="注册"
	         android:background="@drawable/bespoke_detail_led_white"
	        />
		 </RelativeLayout>
	</RelativeLayout>
	
	<TextView 
	    android:id="@+id/fragment_myperson_wallet"
	     android:layout_width="match_parent"
         android:layout_height="60dp"
	     android:textColor="@color/common_gray"
	     android:textSize="18sp"
	     android:text="我的钱包"
	     android:gravity="center_vertical"
	     android:drawableLeft="@drawable/img_my_money"
	     android:drawablePadding="20dp"
	     android:layout_marginLeft="30dp"
	    />
	<View 
	    android:layout_width="match_parent"
        android:layout_height="1dp" 
	    android:background="@color/common_light_gray"
	    />
	<TextView 
	    android:id="@+id/fragment_myperson_collect"
	     android:layout_width="match_parent"
         android:layout_height="60dp"
	     android:textColor="@color/common_gray"
	     android:textSize="18sp"
	     android:text="我的收藏"
	     android:gravity="center_vertical"
	     android:drawableLeft="@drawable/img_my_collection"
	     android:drawablePadding="20dp"
	     android:layout_marginLeft="30dp"
	    />
	<View 
	    android:layout_width="match_parent"
        android:layout_height="1dp" 
	    android:background="@color/common_light_gray"
	    />
	<TextView 
	    android:id="@+id/fragment_myperson_dynamic"
	     android:layout_width="match_parent"
         android:layout_height="60dp"
	     android:textColor="@color/common_gray"
	     android:textSize="18sp"
	     android:text="动态"
	     android:gravity="center_vertical"
	     android:drawableLeft="@drawable/img_my_message"
	     android:drawablePadding="20dp"
	     android:layout_marginLeft="30dp"
	    />
	<View 
	    android:layout_width="match_parent"
        android:layout_height="1dp" 
	    android:background="@color/common_light_gray"
	    />
	<TextView 
	    android:id="@+id/fragment_myperson_apply"
	     android:layout_width="match_parent"
         android:layout_height="60dp"
	     android:textColor="@color/common_gray"
	     android:textSize="18sp"
	     android:text="申领充电卡"
	     android:gravity="center_vertical"
	     android:drawableLeft="@drawable/img_my_apply"
	     android:drawablePadding="20dp"
	     android:layout_marginLeft="30dp"
	    />
	<View 
	    android:layout_width="match_parent"
        android:layout_height="1dp" 
	    android:background="@color/common_light_gray"
	    />
	<TextView 
	    android:id="@+id/fragment_myperson_settings"
	     android:layout_width="match_parent"
         android:layout_height="60dp"
	     android:textColor="@color/common_gray"
	     android:textSize="18sp"
	     android:text="设置"
	     android:gravity="center_vertical"
	     android:drawableLeft="@drawable/img_my_set"
	     android:drawablePadding="20dp"
	     android:layout_marginLeft="30dp"
	    />
	<View 
	    android:layout_width="match_parent"
        android:layout_height="1dp" 
	    android:background="@color/common_light_gray"
	    />
	
	
	
	
    
</LinearLayout>
