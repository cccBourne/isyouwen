<?xml version="1.0" encoding="utf-8"?>
<!-- 登录fragment 界面 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_white"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/login_userphone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:background="@drawable/common_edit_shape_selector"
        android:hint="手机号"
        android:inputType="number"
        android:maxLength="13"
        android:textColor="@color/common_black"
        android:textColorHint="@color/common_light_gray"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/login_userpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:background="@drawable/common_edit_shape_selector"
        android:hint="密码"
        android:textColor="@color/common_black"
        android:textColorHint="@color/common_light_gray"
        android:inputType="numberPassword"
        android:maxLength="8"
        android:longClickable="false"
        android:textSize="18sp" />

  
    <Button
        android:id="@+id/login_commit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:background="@drawable/popup_select_shape_confirm"
        android:padding="12dp"
        android:text="登录"
        android:textColor="@color/common_white"
        android:textSize="18sp"
        android:textStyle="bold" />
 
    <TextView
        android:id="@+id/login_reset_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="忘记密码 ？"
         android:textColor="@color/common_gray"
        android:textSize="14sp"
        />

</LinearLayout>