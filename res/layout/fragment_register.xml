<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_white"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/register_userphone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:background="@drawable/common_edit_shape_selector"
        android:hint="手机号"
         android:textColor="@color/common_black"
        android:textColorHint="@color/common_light_gray"
        android:inputType="number"
        android:maxLength="13"
        android:textSize="18sp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp" >

        <EditText
            android:id="@+id/register_et_captcha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/common_edit_shape_selector"
            android:hint="验证码"
            android:textColor="@color/common_black"
      	    android:textColorHint="@color/common_light_gray"
            android:inputType="number"
            android:maxLength="8"
            android:textSize="18sp" />

        <Button
            android:id="@+id/register_btn_captcha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="5dp"
            android:background="@drawable/popup_select_shape_confirm"
            android:text="获取验证码"
            android:textColor="@color/common_white"
            android:textSize="15sp" />
    </FrameLayout>

    <EditText
        android:id="@+id/register_set_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:background="@drawable/common_edit_shape_selector"
        android:hint="设置密码"
         android:textColor="@color/common_black"
        android:textColorHint="@color/common_light_gray"
        android:inputType="numberPassword"
        android:maxLength="8"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/register_confirm_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:background="@drawable/common_edit_shape_selector"
        android:hint="确认密码"
         android:textColor="@color/common_black"
        android:textColorHint="@color/common_light_gray"
        android:inputType="numberPassword"
        android:maxLength="8"
        android:textSize="18sp" />

    <Button
        android:id="@+id/register_commit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/popup_select_shape_confirm"
        android:padding="12dp"
        android:text="提交"
        android:textColor="@color/common_white"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal" >
 
        <CheckBox
            android:id="@+id/register_checkbox_protocol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:scaleX="0.8"
            android:scaleY="0.8" />

        <TextView
            android:id="@+id/register_commit_tv_protocol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已阅读《爱充网用户协议》"
            android:textColor="@color/common_gray"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>