<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_light_white"
    android:orientation="vertical" >
    
     <RelativeLayout
        android:id="@+id/bespoke_detail_top_rl" 
        android:background="@color/common_orange"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        >
        <ImageButton
            android:id="@+id/bespoke_detail_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/nav_btn_back"
            android:background="@android:color/transparent"/>
        <TextView 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="预约详情"
             android:textColor="@color/common_white"
             android:textSize="18sp"
             android:padding="5dp"
             android:layout_centerVertical="true"
             android:layout_centerInParent="true"
            />
         <TextView 
             android:id="@+id/bespoke_detail_cancle"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="取消预约"
             android:textColor="@color/common_white"
             android:textSize="15sp"
             android:padding="5dp"
             android:layout_marginRight="10dp"
             android:layout_centerVertical="true"
             android:layout_alignParentRight="true"
            />
        </RelativeLayout>
     <LinearLayout 
         android:id="@+id/bespoke_detail_downtime_ll"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_margin="30dp"
         android:layout_below="@id/bespoke_detail_top_rl"
         android:background="@color/common_white"
         android:orientation="vertical"
         >
      <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="剩余预约时间:"
        android:layout_marginTop="20dp"
        android:textColor="@color/common_black"
        android:textSize="18sp"
        android:textStyle="bold"
        />
      <TextView 
        android:id="@+id/bespoke_detail_downtime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:textColor="@color/common_orange"
        android:textSize="24sp"
        android:textStyle="bold"
        />
         
     </LinearLayout>   
     <!-- 订单状态 -->
     <LinearLayout 
         android:id="@+id/bespoke_detail_status_ll"
         android:visibility="gone"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginLeft="30dp"
          android:layout_marginTop="50dp"
          android:layout_marginBottom="10dp"
         android:layout_below="@id/bespoke_detail_downtime_ll"
         android:orientation="horizontal"
         >
         <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       	android:layout_marginRight="10dp"
        android:text="订单状态:"
        android:textColor="@color/common_black"
        android:textStyle="bold"
        android:textSize="14sp"
        />
     <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已完成"
        android:textColor="@color/common_black"
        android:textStyle="bold"
        android:textSize="14sp"
        />
         
     </LinearLayout>
     
    <TextView 
        android:id="@+id/bespoke_detail_ordernum_tag"
        android:layout_below="@id/bespoke_detail_status_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       	android:layout_marginLeft="30dp"
       	android:layout_marginRight="10dp"
        android:text="订单编号:"
        android:textColor="@color/common_black"
        android:textStyle="bold"
        android:textSize="14sp"
        />
     <TextView 
        android:id="@+id/bespoke_detail_ordernum"
        android:layout_below="@id/bespoke_detail_status_ll"
        android:layout_toRightOf="@id/bespoke_detail_ordernum_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       	android:layout_marginRight="30dp"
        android:textColor="@color/common_black"
        android:textStyle="bold"
        android:textSize="14sp"
        />
     <TextView 
        android:id="@+id/bespoke_detail_frozen_price_tag"
        android:layout_below="@id/bespoke_detail_ordernum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       	android:layout_marginLeft="30dp"
       	android:layout_marginRight="10dp"
       	android:layout_marginTop="10dp"
        android:textColor="@color/common_black"
        android:textStyle="bold"
        android:textSize="14sp"
        />
     <TextView 
        android:id="@+id/bespoke_detail_frozen_price"
        android:layout_below="@id/bespoke_detail_ordernum"
        android:layout_toRightOf="@id/bespoke_detail_frozen_price_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       	android:layout_marginRight="30dp"
       	android:layout_marginTop="10dp"
        android:textColor="@color/common_black"
        android:textStyle="bold"
        android:textSize="14sp"
        />
     <TextView 
        android:id="@+id/bespoke_detail_order_time_tag"
        android:layout_below="@id/bespoke_detail_frozen_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       	android:layout_marginLeft="30dp"
       	android:layout_marginTop="10dp"
       	android:layout_marginRight="10dp"
        android:textColor="@color/common_black"
        android:textStyle="bold"
        android:textSize="14sp"
        />
     <TextView 
        android:id="@+id/bespoke_detail_order_time"
        android:layout_below="@id/bespoke_detail_frozen_price"
        android:layout_toRightOf="@id/bespoke_detail_order_time_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       	android:layout_marginRight="30dp"
       	android:layout_marginTop="10dp"
        android:textColor="@color/common_black"
        android:textStyle="bold"
        android:textSize="14sp"
        />
    
     <TextView 
        android:id="@+id/bespoke_detail_address_tag"
        android:layout_below="@id/bespoke_detail_order_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       	android:layout_marginLeft="30dp"
       	android:layout_marginTop="10dp"
       	android:layout_marginRight="10dp"
        android:text="预约地址:"
        android:textColor="@color/common_black"
        android:textStyle="bold"
        android:textSize="14sp"
        />
     <TextView 
        android:id="@+id/bespoke_detail_address"
        android:layout_below="@id/bespoke_detail_order_time"
        android:layout_toRightOf="@id/bespoke_detail_address_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       	android:layout_marginRight="30dp"
       	android:layout_marginTop="10dp"
        android:textColor="@color/common_black"
        android:textStyle="bold"
        android:textSize="14sp"
        />
        
     <TextView 
        android:id="@+id/bespoke_detail_content_tag"
        android:layout_below="@id/bespoke_detail_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       	android:layout_marginLeft="30dp"
       	android:layout_marginTop="10dp"
       	android:layout_marginRight="10dp"
        android:text="预约内容:"
        android:textColor="@color/common_black"
        android:textStyle="bold"
        android:textSize="14sp"
        />
     <TextView 
        android:id="@+id/bespoke_detail_name"
        android:layout_below="@id/bespoke_detail_address"
        android:layout_toRightOf="@id/bespoke_detail_content_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       	android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/common_black"
        android:textStyle="bold"
        android:textSize="14sp"
        />
      <TextView 
        android:id="@+id/bespoke_detail_electric_num"
        android:layout_below="@id/bespoke_detail_name"
        android:layout_toRightOf="@id/bespoke_detail_content_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/common_black"
        android:textStyle="bold"
        android:textSize="14sp"
        />
     <TextView 
        android:id="@+id/bespoke_detail_electric_num_tag"
        android:layout_below="@id/bespoke_detail_name"
        android:layout_toRightOf="@id/bespoke_detail_electric_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="号桩-"
        android:textColor="@color/common_black"
        android:textStyle="bold"
        android:textSize="14sp"
        />
    <TextView 
        android:id="@+id/bespoke_detail_electric_mode"
        android:layout_below="@id/bespoke_detail_name"
        android:layout_toRightOf="@id/bespoke_detail_electric_num_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/common_black"
        android:textStyle="bold"
        android:textSize="14sp"
        />
    <TextView 
        android:id="@+id/bespoke_detail_electric_interface"
        android:layout_below="@id/bespoke_detail_name"
        android:layout_toRightOf="@id/bespoke_detail_electric_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="@color/common_black"
        android:textStyle="bold"
        android:textSize="14sp"
        />
    <TextView 
        android:id="@+id/bespoke_detail_head_name"
        android:layout_below="@id/bespoke_detail_name"
        android:layout_toRightOf="@id/bespoke_detail_electric_interface"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/common_black"
        android:textStyle="bold"
        android:textSize="14sp"
        />
     <TextView 
        android:id="@+id/bespoke_detail_park_num"
        android:layout_below="@id/bespoke_detail_head_name"
        android:layout_toRightOf="@id/bespoke_detail_content_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/common_black"
        android:textStyle="bold"
        android:textSize="14sp"
        />
     <!-- led灯 地锁 -->
    <LinearLayout 
        android:id="@+id/bespoke_detail_tool_ll"
        android:layout_margin="30dp"
        android:layout_below="@id/bespoke_detail_park_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:orientation="horizontal"        
        >
        <TextView 
            android:id="@+id/bespoke_detail_led"
            android:layout_width="0dp"
        	android:layout_height="wrap_content"
        	android:layout_weight="1"
        	android:layout_marginRight="15dp"
            android:text="开灯寻桩"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="@color/common_white"
            android:drawableLeft="@drawable/bg_lamp_on"
            android:background="@drawable/bespoke_detail_led_gray"
            />
        <TextView
            android:id="@+id/bespoke_detail_lock"
            android:layout_width="0dp"
        	android:layout_height="wrap_content"
        	android:layout_weight="1"
            android:text="降地锁"
            android:gravity="center"
            android:layout_marginLeft="15dp"
            android:textSize="20sp"
            android:textColor="@color/common_white"
            android:drawableLeft="@drawable/bg_order_lock"
            android:background="@drawable/bespoke_detail_led_gray"
            />
    </LinearLayout>
    <!-- 导航  续约 -->
        <LinearLayout 
        android:id="@+id/bespoke_detail_nav_ll"
       	android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_below="@id/bespoke_detail_tool_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:orientation="horizontal"        
        >
        <TextView 
            android:id="@+id/bespoke_detail_nav"
            android:layout_width="0dp"
        	android:layout_height="wrap_content"
        	android:layout_weight="1"
        	android:layout_marginRight="15dp"
            android:text="导航去充电"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="@color/common_white"
            android:background="@drawable/popup_select_shape_confirm"
            />
        <TextView 
            android:id="@+id/bespoke_detail_again"
            android:layout_width="0dp"
        	android:layout_height="wrap_content"
        	android:layout_weight="1"
            android:text="续约"
            android:gravity="center"
            android:layout_marginLeft="15dp"
            android:textSize="20sp"
            android:textColor="@color/common_white"
            android:background="@drawable/popup_select_shape_confirm"
            />
    </LinearLayout>
     <TextView 
            android:id="@+id/bespoke_detail_again_bespoke"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="再次预约"
            android:gravity="center"
            android:layout_marginLeft="30dp"
       		android:layout_marginRight="30dp"
       		android:layout_marginTop="20dp"
       		android:layout_below="@id/bespoke_detail_nav_ll"
            android:textSize="20sp"
            android:textColor="@color/common_white"
            android:background="@drawable/popup_select_shape_confirm"
            />

</RelativeLayout>
