<?xml version="1.0" encoding="utf-8"?>
<!-- 提交我的反馈 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_white"
      android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >
    
     <RelativeLayout
        android:background="@color/common_orange"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        >
        <ImageButton
            android:id="@+id/commit_feedback_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/nav_btn_back"
            android:background="@android:color/transparent"/>
        <TextView 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="意见反馈"
             android:textColor="@color/common_white"
             android:textSize="18sp"
             android:padding="5dp"
             android:layout_centerVertical="true"
             android:layout_centerInParent="true"
            
            />
        </RelativeLayout>
   
     <com.bm.wanma.view.ContainsEmojiEditText 
         android:id="@+id/commit_feedback_content"
         android:layout_width="match_parent"
         android:layout_height="200dp"
         android:textSize="14sp"
         android:layout_marginLeft="20dp"
         android:layout_marginRight="20dp"
         android:hint="请输入反馈内容..."
         android:inputType="textMultiLine"
         android:textColorHint="@color/common_gray"
         android:layout_marginTop="20dp"
         android:gravity="top"
         android:maxLength="200" 
         android:background="@drawable/common_edit_shape_selector"
         />
      
     <TextView 
         android:id="@+id/commit_feedback_commit"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="30dp"
          android:layout_marginLeft="20dp"
         android:layout_marginRight="20dp"
         android:textColor="@color/common_white"
         android:gravity="center"
         android:textSize="17sp"
         android:text="提交"
         android:background="@drawable/recharge_commit_bg_light_white"
         />
   

</LinearLayout>
