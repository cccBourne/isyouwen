<?xml version="1.0" encoding="utf-8"?>
<!-- 忘记密码界面 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_white"
    android:padding="30dp"
    android:orientation="vertical" >
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        >
        <TextView 
            android:id="@+id/forget_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="返回"
            android:textColor="@color/common_gray"
            android:layout_alignParentLeft="true"
            />
         <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
             android:text="忘记密码"
            android:textColor="@color/common_orange"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>

    <EditText
        android:id="@+id/forget_et_userphone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:background="@drawable/common_edit_shape_selector"
        android:hint="手机号"
         android:textColor="@color/common_black"
        android:textColorHint="@color/common_light_gray"
        android:inputType="number"
        android:maxLength="13"
        android:textSize="18sp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp" >

        <EditText
            android:id="@+id/forget_et_captcha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/common_edit_shape_selector"
            android:hint="验证码"
            android:textColor="@color/common_black"
      	    android:textColorHint="@color/common_light_gray"
            android:inputType="number"
            android:maxLength="8"
            android:textSize="18sp" />

        <Button
            android:id="@+id/forget_btn_captcha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="5dp"
            android:background="@drawable/popup_select_shape_confirm"
            android:text="获取验证码"
            android:textColor="@color/common_white"
            android:textSize="15sp" />
    </FrameLayout>

    <EditText
        android:id="@+id/forget_set_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:background="@drawable/common_edit_shape_selector"
        android:hint="设置密码"
         android:textColor="@color/common_black"
        android:textColorHint="@color/common_light_gray"
        android:inputType="numberPassword"
        android:maxLength="8"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/forget_confirm_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:background="@drawable/common_edit_shape_selector"
        android:hint="确认密码"
         android:textColor="@color/common_black"
        android:textColorHint="@color/common_light_gray"
        android:inputType="numberPassword"
        android:maxLength="8"
        android:textSize="18sp" />

    <Button
        android:id="@+id/forget_commit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/popup_select_shape_confirm"
        android:padding="12dp"
        android:text="确定"
        android:textColor="@color/common_white"
        android:textSize="18sp" />

  
</LinearLayout>