<?xml version="1.0" encoding="utf-8"?>
<!-- 个人详情资料 -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_white"
    android:scrollbars="none"
    android:focusable="true"
    android:focusableInTouchMode="true"
    >
    <LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="vertical"
    	 android:focusable="true"
    	 android:focusableInTouchMode="true"
        >
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="44dp"
            >
           <ImageButton
            android:id="@+id/userinfo_detail_back"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/nav_btn_back2"
            android:layout_marginLeft="10dp"
            android:background="@android:color/transparent"/> 
            <TextView
            android:id="@+id/userinfo_detail_complete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            android:text="保存"
            android:textColor="@color/common_black"
            android:textSize="18sp"
            android:visibility="gone" />
            
        </RelativeLayout>
     <com.bm.wanma.view.RoundImageView  
         	 android:id="@+id/userinfo_detail_photo"
         	 android:layout_width="80dp"
          	 android:layout_height="80dp"
          	 android:layout_gravity="center_horizontal"
       		 android:src="@drawable/img_my_user" /> 
    <TextView 
        android:id="@+id/userinfo_detail_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="@color/common_black"
        android:textStyle="bold"
        android:textSize="18sp"
        android:gravity="center_horizontal"
        />
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        >
            <!-- 昵称 -->
       <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="50dp">
           <TextView 
                android:layout_width="wrap_content"
         		android:layout_height="wrap_content"
	     		android:textColor="@color/common_gray"
	     		android:textSize="17sp"
	     		android:text="昵称"
	     		android:layout_alignParentLeft="true"
	    		android:layout_centerVertical="true"               
               
               />
         <com.bm.wanma.view.ContainsEmojiEditText
            android:id="@+id/userinfo_detail_et_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/common_black"
            android:gravity="right"
            android:hint="请输入昵称"
            android:maxLength="5"
            android:textColorHint="@color/common_gray"
            android:background="@null"
            android:textSize="16sp"
           />
       </RelativeLayout> 
       <View 
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/common_light_gray"
           />
        <!-- 真实姓名 -->
        <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="50dp">
           <TextView 
                android:layout_width="wrap_content"
         		android:layout_height="wrap_content"
	     		android:textColor="@color/common_gray"
	     		android:textSize="17sp"
	     		android:text="真实姓名"
	     		android:layout_alignParentLeft="true"
	    		android:layout_centerVertical="true"               
               
               />
         <com.bm.wanma.view.ContainsEmojiEditText
            android:id="@+id/userinfo_detail_et_realname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/common_gray"
            android:hint="请输入真实姓名"
             android:gravity="right"
            android:maxLength="10"
            android:textColorHint="@color/common_gray"
            android:background="@null"
            android:textSize="16sp"
           />
       
       </RelativeLayout> 
       <View 
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/common_light_gray"
           />
       <!-- 性别 -->
        <RelativeLayout 
        android:id="@+id/userinfo_detail_rl_sex"
        android:layout_width="match_parent"
        android:layout_height="50dp">
           <TextView 
                android:layout_width="wrap_content"
         		android:layout_height="wrap_content"
	     		android:textColor="@color/common_gray"
	     		android:textSize="17sp"
	     		android:text="性别"
	     		android:layout_alignParentLeft="true"
	    		android:layout_centerVertical="true"               
               
               />
           <ImageView 
               android:id="@+id/userinfo_detail_iv_sex"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentRight="true"
               android:layout_centerVertical="true"
               android:src="@drawable/btn_map_arrow"
               />
         <TextView
            android:id="@+id/userinfo_detail_tv_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
             android:gravity="right"
            android:layout_toLeftOf="@id/userinfo_detail_iv_sex"
            android:textColor="@color/common_gray"
            android:textSize="16sp"
           />
       </RelativeLayout> 
       <View 
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/common_light_gray"
           />
        <!-- 出生日期 -->
        <RelativeLayout 
        android:layout_width="match_parent"
        android:id="@+id/userinfo_detail_rl_brithday"
        android:layout_height="50dp">
           <TextView 
                android:layout_width="wrap_content"
         		android:layout_height="wrap_content"
	     		android:textColor="@color/common_gray"
	     		android:textSize="17sp"
	     		android:text="出生日期"
	     		android:layout_alignParentLeft="true"
	    		android:layout_centerVertical="true"               
               
               />
           <ImageView 
               android:id="@+id/userinfo_detail_iv_brithday"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentRight="true"
               android:layout_centerVertical="true"
               android:src="@drawable/btn_map_arrow"
               />
         <TextView
            android:id="@+id/userinfo_detail_tv_brithday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="right"
            android:layout_toLeftOf="@id/userinfo_detail_iv_brithday"
            android:textColor="@color/common_gray"
            android:textSize="16sp"
           />
       </RelativeLayout> 
       <View 
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/common_light_gray"
           />
       <!--充电卡号 -->
        <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="50dp">
           <TextView 
                android:layout_width="wrap_content"
         		android:layout_height="wrap_content"
	     		android:textColor="@color/common_gray"
	     		android:textSize="17sp"
	     		android:text="充电卡号"
	     		android:layout_alignParentLeft="true"
	    		android:layout_centerVertical="true"               
               
               />
           <TextView 
               android:id="@+id/userinfo_detail_tv_ic"
                android:layout_width="190dp"
         		android:layout_height="wrap_content"
	     		android:textColor="@color/common_gray"
	     		android:textSize="16sp"
	     		 android:gravity="right"
	     		android:layout_alignParentRight="true"
            	android:layout_centerVertical="true"              
               />
       </RelativeLayout> 
       <View 
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/common_light_gray"
           />
        <!--电子邮箱 -->
        <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="50dp">
           <TextView 
                android:layout_width="wrap_content"
         		android:layout_height="wrap_content"
	     		android:textColor="@color/common_gray"
	     		android:textSize="17sp"
	     		android:text="电子邮箱 "
	     		android:layout_alignParentLeft="true"
	    		android:layout_centerVertical="true"               
               
               />
         <com.bm.wanma.view.ContainsEmojiEditText
            android:id="@+id/userinfo_detail_et_email"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/common_gray"
            android:hint="请输入Email"
            android:gravity="right"
	     	android:paddingRight="3dp"
            android:inputType="textEmailAddress"
            android:maxLength="40"
            android:textColorHint="@color/common_gray"
            android:background="@null"
            android:textSize="16sp"
          />
     </RelativeLayout> 
       <View 
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/common_light_gray"
           />
        <!-- 我的爱车 -->
        <RelativeLayout 
        android:id="@+id/userinfo_detail_rl_cartype"
        android:layout_width="match_parent"
        android:layout_height="50dp">
           <TextView 
                android:layout_width="wrap_content"
         		android:layout_height="wrap_content"
	     		android:textColor="@color/common_gray"
	     		android:textSize="17sp"
	     		android:text="我的爱车"
	     		android:layout_alignParentLeft="true"
	    		android:layout_centerVertical="true"               
               
               />
           <ImageView 
               android:id="@+id/userinfo_detail_iv_cartype"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentRight="true"
               android:layout_centerVertical="true"
               android:src="@drawable/btn_map_arrow"
               />
         <TextView
            android:id="@+id/userinfo_detail_tv_cartype"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
             android:gravity="right"
            android:layout_toLeftOf="@id/userinfo_detail_iv_cartype"
            android:textColor="@color/common_gray"
            android:textSize="16sp"
           />
       </RelativeLayout> 
       <View 
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/common_light_gray"
           />
        <!-- 所在地区 -->
        <RelativeLayout 
        android:id="@+id/userinfo_detail_rl_code"
        android:layout_width="match_parent"
        android:layout_height="50dp">
           <TextView 
                android:layout_width="wrap_content"
         		android:layout_height="wrap_content"
	     		android:textColor="@color/common_gray"
	     		android:textSize="17sp"
	     		android:text="所在地区"
	     		android:layout_alignParentLeft="true"
	    		android:layout_centerVertical="true"               
               
               />
           <ImageView 
               android:id="@+id/userinfo_detail_iv_code"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentRight="true"
               android:layout_centerVertical="true"
               android:src="@drawable/btn_map_arrow"
               />
         <TextView
            android:id="@+id/userinfo_detail_tv_code"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="选择地区"
            android:gravity="right"
            android:layout_toLeftOf="@id/userinfo_detail_iv_code"
            android:textColor="@color/common_gray"
            android:textSize="16sp"
           />
       </RelativeLayout> 
       <View 
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/common_light_gray"
           />
      <!-- 详细地址 -->
        <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="50dp">
           <TextView 
                android:layout_width="wrap_content"
         		android:layout_height="wrap_content"
	     		android:textColor="@color/common_gray"
	     		android:textSize="17sp"
	     		android:text="详细地址"
	     		android:layout_alignParentLeft="true"
	    		android:layout_centerVertical="true"               
               
               />
        <com.bm.wanma.view.ContainsEmojiEditText
            android:id="@+id/userinfo_detail_et_address"
            android:layout_width="190dp"
            android:gravity="right|center_vertical"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/common_gray"
            android:hint="请输入详细地址"
            android:maxLength="50"
            android:maxLines="2"
            android:textColorHint="@color/common_gray"
            android:background="@null"
            android:textSize="16sp"
            android:paddingRight="2dp"
           />
         
       </RelativeLayout> 
       <View 
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/common_light_gray"
            android:layout_marginBottom="20dp"
           />
        
        
    </LinearLayout>
  </LinearLayout>

</ScrollView>
