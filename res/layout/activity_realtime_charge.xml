<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_white"
    >
    
     <RelativeLayout
        android:id="@+id/realtime_charge_title"
        android:background="@color/common_orange"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        >
          <ImageButton
            android:id="@+id/realtime_charge_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/nav_btn_back"
            android:background="@android:color/transparent"/>
        <TextView 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="正在充电"
             android:textColor="@color/common_white"
             android:textSize="18sp"
             android:padding="5dp"
             android:layout_centerVertical="true"
             android:layout_centerInParent="true"
            />
        </RelativeLayout>
   
     <!-- 显示动画gif -->
      <WebView 
        android:id="@+id/realtime_charge_webview_display"
         android:layout_below="@id/realtime_charge_title"
        android:layout_width="288dp"
        android:layout_height="162dp"
        android:layout_centerHorizontal="true"
        />
     
          <ImageView 
              android:visibility="gone"
           android:id="@+id/realtime_charge_anim"
           android:layout_below="@id/realtime_charge_title"
            android:layout_marginTop="40dp"
           android:layout_marginBottom="40dp"
           android:layout_centerHorizontal="true"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:src="@drawable/bg_charging_ok"
           />
          <LinearLayout 
             android:id="@+id/realtime_charge_time_tag"
             android:layout_below="@id/realtime_charge_webview_display"
             android:layout_width="match_parent"
             android:layout_height="wrap_content" 
             android:gravity="center"
             android:orientation="horizontal"
              >
          <TextView 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="充电时间:"
             android:textColor="@color/common_black"
             android:textSize="18sp"
            />
             <TextView 
             android:id="@+id/realtime_charge_time"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textColor="@color/common_black"
             android:textSize="18sp"
            /> 
          </LinearLayout>
          <LinearLayout 
             android:id="@+id/realtime_charge_money_tag"
             android:layout_below="@id/realtime_charge_time_tag"
             android:layout_marginTop="20dp"
             android:layout_width="match_parent"
             android:layout_height="wrap_content" 
             android:gravity="center"
             android:orientation="horizontal"
              >
          <TextView 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="预充金额:"
             android:textColor="@color/common_black"
             android:textSize="18sp"
             android:layout_marginRight="10dp"
            />
             <TextView 
             android:id="@+id/realtime_charge_money"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textColor="@color/common_black"
             android:textSize="18sp"
            /> 
          </LinearLayout>
          <LinearLayout 
             android:id="@+id/realtime_charge_price_tag"
             android:layout_below="@id/realtime_charge_money_tag"
             android:layout_marginTop="20dp"
             android:layout_width="match_parent"
             android:layout_height="wrap_content" 
             android:gravity="center"
             android:orientation="horizontal"
              >
          <TextView 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="当前电价:"
             android:textColor="@color/common_black"
             android:textSize="18sp"
             android:layout_marginRight="10dp"
            />
             <TextView 
             android:id="@+id/realtime_charge_price"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textColor="@color/common_black"
             android:textSize="18sp"
            /> 
          </LinearLayout>
             <LinearLayout 
             android:id="@+id/realtime_charge_power_tag"
             android:layout_below="@id/realtime_charge_price_tag"
             android:layout_marginTop="20dp"
             android:layout_width="match_parent"
             android:layout_height="wrap_content" 
             android:gravity="center"
             android:orientation="horizontal"
              >
          <TextView 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="已充电量:"
             android:textColor="@color/common_black"
             android:textSize="18sp"
             android:layout_marginRight="10dp"
            />
             <TextView 
             android:id="@+id/realtime_charge_power"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textColor="@color/common_black"
             android:textSize="18sp"
            /> 
          </LinearLayout>
             <LinearLayout 
             android:id="@+id/realtime_charge_consume_tag"
             android:layout_below="@id/realtime_charge_power_tag"
             android:layout_marginTop="20dp"
             android:layout_width="match_parent"
             android:layout_height="wrap_content" 
             android:gravity="center"
             android:orientation="horizontal"
              >
          <TextView 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="已充金额:"
             android:textColor="@color/common_black"
             android:textSize="18sp"
             android:layout_marginRight="10dp"
            />
             <TextView 
             android:id="@+id/realtime_charge_consume"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textColor="@color/common_black"
             android:textSize="18sp"
            /> 
          </LinearLayout>
          <LinearLayout 
             android:id="@+id/realtime_charge_soc_tag"
             android:layout_below="@id/realtime_charge_consume_tag"
             android:layout_marginTop="20dp"
             android:layout_width="match_parent"
             android:layout_height="wrap_content" 
             android:gravity="center"
             android:orientation="horizontal"
              >
          <TextView 
             android:id="@+id/realtime_charge_soc_tag_tv"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="电池SOC:"
             android:textColor="@color/common_black"
             android:textSize="18sp"
             android:layout_marginRight="10dp"
            />
             <TextView 
             android:id="@+id/realtime_charge_soc"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textColor="@color/common_black"
             android:textSize="18sp"
            /> 
          </LinearLayout>
          <TextView
        android:id="@+id/realtime_charge_finish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:layout_below="@id/realtime_charge_soc_tag"
        android:text="结束充电"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:textColor="@color/common_white"
        android:background="@drawable/popup_select_shape_confirm"
        android:textSize="18sp" />

</RelativeLayout>
